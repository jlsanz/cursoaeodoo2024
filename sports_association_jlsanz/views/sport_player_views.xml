<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="sport_player_view_tree" model="ir.ui.view">
        <field name="name">sport.player.view.tree</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Sports">
                <field name="name" />
                <field name="age" />
                <field name="position" />
                <field name="team_id" />
                <field name="starter" />
            </tree>
        </field>
    </record>

    <record id="sport_player_view_form" model="ir.ui.view">
        <field name="name">sport.player.view.form</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <form string="Player">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="age" />
                        <field name="position" />
                        <field name="team_id" />
                        <field name="starter" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<record id="action_sport_player" model="ir.actions.act_window">
    <field name="name">Sport Player</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">sport.player</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create a new player
        </p>
    </field>
</record>

</odoo>