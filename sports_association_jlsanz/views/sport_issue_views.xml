<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="sport_issue_tree_view" model="ir.ui.view">
        <field name="name">sport.issue.tree.view</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Issues">
                <field name="sequence" widget="handle"/>
                <field name="name" />
                <field name="date" optional="show" />
                <field name="user_id" optional="hide"/>
                <field name="state" widget="badge" />
            </tree>
        </field>
    </record>

    <record id="sport_issue_tree_view_form" model="ir.ui.view">
        <field name="name">sport.issue.tree.form</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <form string="Issues">
                <header>
                    <field name="state" options="{'clickable':1}" widget="statusbar" statusbar_visible="draft,open,done" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Issue Nmae" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="assistance" widget="boolean_toggle"/>
                        </group>
                        <notebook>
                            <page name="description" string="Description">
                                <field name="description"/>
                            </page>
                            <page name="solution" string="Solution">
                                <field name="solution"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sport_issue" model="ir.actions.act_window">
        <field name="name">Sport Issues</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sport.issue</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport issue
            </p>
        </field>
    </record>

</odoo>